urlencode() {
	# requires package perl-uri
	echo "$1" | perl -MURI::Escape -lne 'print uri_escape($_)'
}

websearch() {
	local URL
	URL="https://duckduckgo.com/"
	if [ "$1" ]; then
		URL="$URL?q=$(urlencode "$1")"
	fi
	$BROWSER "$URL"
}

ssh-add() {
	if ! [ -S "$SSH_AUTH_SOCK" ]; then
		eval $(ssh-agent -s)
	fi
	command ssh-add $*
}

clbin() {
	curl -F 'clbin=<-' https://clbin.com
}
